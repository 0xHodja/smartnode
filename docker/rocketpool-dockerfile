###
# Builder
###


# Start from golang image
FROM golang:alpine AS builder

# Copy source files
ADD ./rocketpool /src/rocketpool
ADD ./shared /src/shared
ADD ./go.mod /src/go.mod
ADD ./go.sum /src/go.sum

# Compile & install
WORKDIR /src
RUN apk add --no-cache build-base linux-headers git
RUN git clone https://github.com/rocket-pool/rocketpool-go.git /rocketpool-go
RUN go install ./rocketpool


###
# Process
###


# Start from Alpine image
FROM alpine:latest

# Add C libraries
RUN apk add --no-cache libgcc libstdc++

# Copy binary
COPY --from=builder /go/bin/rocketpool /go/bin/rocketpool

# Container entry point
ENTRYPOINT ["/go/bin/rocketpool"]
