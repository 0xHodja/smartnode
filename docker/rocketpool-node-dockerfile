###
# Builder
###


# Start from golang alpine image
FROM golang:alpine AS builder

# Install OS dependencies
RUN apk update && apk add --no-cache build-base git linux-headers

# Copy source files
ADD ./rocketpool-node /go/src/github.com/rocket-pool/smartnode/rocketpool-node
ADD ./shared /go/src/github.com/rocket-pool/smartnode/shared
ADD ./vendor /go/src/github.com/rocket-pool/smartnode/vendor

# Install go dependencies
WORKDIR /go/src/github.com/rocket-pool/smartnode
RUN go get -d github.com/ethereum/go-ethereum
RUN go get -d github.com/ethereum/go-ethereum/internal/ethapi
RUN go get -d github.com/ethereum/go-ethereum/accounts/usbwallet

# Compile & install
RUN go install github.com/rocket-pool/smartnode/rocketpool-node


###
# Process
###


# Start from alpine image
FROM alpine

# Copy binary
COPY --from=builder /go/bin/rocketpool-node /go/bin/rocketpool-node

# Container entry point
ENTRYPOINT ["/go/bin/rocketpool-node"]
